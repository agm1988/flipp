<div class='row'>
  <div class="col-sm-10">
    <%= form_for(:game, url: process_command_board_games_path, remote: true) do |f| %>
      <div class='form-group'>
        <%= f.label :command, 'Command' %>
        <%= f.text_field :command, class: 'form-control', id: 'command_input', required: true,
          placeholder: 'Type command here' %>
      </div>

      <div class='form-group'>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
